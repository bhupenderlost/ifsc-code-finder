<%- include('includes/header.ejs') %>
<div class="content container-fluid">
    <div class="container-fluid forms">
        
        <% if (results.length === 0) { %>
        <h1>404 - Page Not Found</h1>
        <script>document.title = "404 - Page Not Found";</script>
        <% } else { %>
        <div class="container-fuild find-ifsc">
            <div class="container-fuild header-text">
                <h1>Find IFSC Code</h1>
                <p>Find Your Bank's IFSC Code</p>
            </div>
            <form class="form-inline justify-content-center">
                <div class="form-group">
                    <label for="bank">Bank:</label>
                    <select id="bank" class="form-control ">
                        <option><%= bank %></option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="state">State:</label>
                    <select id="state" class="form-control">
                        <option><%= state %></option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="district">District:</label>
                    <select id="district" class="form-control">
                        <option><%= district %></option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="branches">Branches:</label>
                    <select id="branches" class="form-control" onchange="this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);">
                        <option><%= branch %></option>
                    </select>
                </div>
            </form>
        </div>
       

            <% } %>
        

    </div>
    <div class="main-content">
        <div class="row">
            <div class="col-md-8 content">
                <%- include('includes/result.ejs') %>
                <hr>
                <%- include('includes/main.ejs') %>

            </div>
            <%- include('includes/sidebar.ejs') %>
        </div>
    </div>
</div>
<%- include('includes/footer.ejs') %>